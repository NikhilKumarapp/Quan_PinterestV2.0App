<% include ./partials/header.ejs %>

<!-- Full-screen registration container -->
<div class="min-h-screen bg-zinc-300 flex items-center justify-center">
    <!-- Registration card container -->
    <div class="w-full max-w-md bg-white px-12 py-10 rounded-3xl shadow-lg">
        <!-- Heading with Pinterest Logo -->
        <div class="flex items-center justify-center mb-6">
            <img src="/images/Pinterestlogo.jpg" alt="Pinterest Logo" class="w-10 h-10 mr-3">
            <h1 class="text-xl text-zinc-800 capitalize font-semibold">Create an account on Pinterest</h1>
        </div>

        <!-- Registration Form -->
        <form action="/register" method="post">
            <!-- Username Field -->
            <input
                class="border border-gray-300 rounded-md block w-full px-4 py-2 mb-4 text-gray-800 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-all duration-200"
                type="text" name="username" placeholder="Username" required>

            <!-- Email Field -->
            <input
                class="border border-gray-300 rounded-md block w-full px-4 py-2 mb-4 text-gray-800 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-all duration-200"
                type="email" name="email" placeholder="Email" required>

            <!-- Contact Number Field -->
            <input
                class="border border-gray-300 rounded-md block w-full px-4 py-2 mb-4 text-gray-800 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-all duration-200"
                type="number" name="contact" placeholder="Contact Number" required>

            <!-- Password Field -->
            <input
                class="border border-gray-300 rounded-md block w-full px-4 py-2 mb-6 text-gray-800 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-all duration-200"
                type="password" name="password" placeholder="Password" required>

            <!-- Create Account Button -->
            <input
                class="w-full px-4 py-2 mt-2 bg-red-600 text-white font-medium rounded-full cursor-pointer hover:bg-red-500 transition-all duration-200 shadow-md"
                type="submit" value="Create New Account">

            <!-- Terms and Policy Notice -->
            <p class="text-gray-600 text-xs mt-6 text-center leading-tight">
                By continuing, you agree to Pinterest's <a href="#" class="text-red-600 hover:underline">Terms of Service</a> and acknowledge you've read our <a href="#" class="text-red-600 hover:underline">Privacy Policy</a>.
            </p>

            <!-- Login Link -->
            <a href="/" class="text-sm font-semibold text-center text-red-600 mt-6 block hover:underline">
                Already a member? Log in
            </a>
        </form>
    </div>
</div>

<% include ./partials/footer.ejs %>
