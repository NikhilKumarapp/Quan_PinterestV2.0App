      <nav class="flex items-center gap-8">
        <a href="/profile" class="text-lg hover:text-red-500 transition duration-200">Profile</a>
        <a href="/feed" class="text-lg hover:text-red-500 transition duration-200">Feed</a>
        <a href="/logout" class="px-4 py-2 bg-red-700 text-white rounded-lg hover:bg-red-600 transition duration-200">Logout</a>
      </nav>
    </header>
  <% } %>
